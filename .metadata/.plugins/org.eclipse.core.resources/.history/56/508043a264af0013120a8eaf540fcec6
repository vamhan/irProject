	request.success(function(result) {
	  console.log(result);
	});

	request.error(function(jqXHR, textStatus, errorThrown) {
	  if (textStatus == 'timeout')
	    console.log('The server is not responding');

	  if (textStatus == 'error')
	    console.log(errorThrown);

	  // Etc
	});
